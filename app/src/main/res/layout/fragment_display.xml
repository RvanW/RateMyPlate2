<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.vanw.robbert.ratemyplate2.DisplayActivityFragment"
    android:orientation="vertical"
    android:background="#F1DEB4">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/scrollView" >

        <LinearLayout
            tools:context="com.vanw.robbert.ratemyplate2.DisplayActivityFragment"
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:paddingTop="@dimen/activity_vertical_margin"
            android:paddingBottom="@dimen/activity_vertical_margin"
            android:orientation="vertical" >

            <TextView android:text="Empty plate" android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/titleDisplay"
                android:textSize="30sp"
                android:layout_gravity="center_horizontal"
                android:gravity="center_horizontal" />

            <RatingBar
                style="@style/foodRatingBar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/ratingBar"
                android:layout_gravity="center_horizontal"
                android:isIndicator="false"
                android:stepSize="0.5"
                android:numStars="5"
                android:rating="0"
                android:layout_marginTop="10dp" />

            <ImageView
                android:layout_width="250dp"
                android:layout_height="250dp"
                android:id="@+id/imageDisplay"
                android:layout_gravity="center_horizontal"
                android:src="@drawable/emptyplate"
                android:adjustViewBounds="true"
                android:contentDescription="plate description" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Description"
                android:id="@+id/desc"
                android:layout_gravity="center_horizontal"
                android:textSize="20dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="This is a fake description because I didn&apos;t want to put my time in describing every pizza or burger"
                android:id="@+id/textView"
                android:textSize="15dp"
                android:layout_marginTop="5dp" />
        </LinearLayout>
    </ScrollView>

</LinearLayout>
